<configuration description="Configuration for EVS Example Test Case">
    <!--
        Define the target preparer class that shall be used to prepare the target for the test. In this case the
        File pusher preparer class is used to transfer the EVS Example Test Case binary to the target.
        See "<build root>/tools/tradefederation/core/src/<class path>.java" for available options
    -->
    <target_preparer class="com.android.compatibility.common.tradefed.targetprep.FilePusher">
        <option name="cleanup" value="true" />
        <option name="push" value="VtsEVSExampleTestCase->/data/local/tmp/VtsEVSExampleTestCase" />
    </target_preparer>
    <!--
        Define the test class that shall be used to run the test. In this case the GTest class is used
        as that's the test framework used for the EVS Example Test Case.
        See "<build root>/tools/tradefederation/core/src/<class path>.java" for available options
    -->
    <test class="com.android.tradefed.testtype.GTest" >
        <option name="native-test-device-path" value="/data/local/tmp" />
        <option name="module-name" value="VtsEVSExampleTestCase" />
    </test>
</configuration>