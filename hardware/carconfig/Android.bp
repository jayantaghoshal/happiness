subdirs = [
   "carconfig",
   "carconfig_updater"
]

// Used by carconfig clients
genrule {
    name: "cc_parameterlist_gen",
    tool_files: ["core/tools/parse_ccdb.py"],
    cmd: "python $(location core/tools/parse_ccdb.py) $(in) $(out)",
    srcs: [
        "core/docs/carconfigspec.xls",
        "core/tools/ccdb_template.h"
    ],
    out: [
        "cc_parameterlist.h"
    ],
}

// Used by carconfig_updater
genrule {
    name: "cc_parameterlist_map_gen",
    tool_files: ["core/tools/parse_ccdb.py"],
    cmd: "python $(location core/tools/parse_ccdb.py) $(in) $(out)",
    srcs: [
        "core/docs/carconfigspec.xls",
        "core/tools/ccdb_paramlist_template.h"
    ],
    out: [
        "cc_parameterlist_map.h"
    ],
}