cc_binary {

    name: "cloudd",
    init_rc: ["cloudd.rc"],
    vendor: true,
    cpp_std: "c++14",

    srcs: [
        "src/certificate_handler_interface.cpp",
        "src/certificate_handler.cpp",
        "src/cloud_request_handler_interface.cpp",
        "src/cloud_request_handler.cpp",
        "src/cloud_request.cpp",
        "src/cloud_service.cpp",
        "src/cloudd_local_config.cpp",
        "src/entry_point_fetcher.cpp",
        "src/entry_point_parser.cpp",
        "src/main.cpp",
    ],

    cppflags: [
        "-Wno-non-virtual-dtor",
        "-fexceptions",
        "-Wno-unused-parameter",
        "-Wno-macro-redefined",
    ],
    shared_libs: [
        "liblog",
        "libtarmac",
        "liblocalconfig",
        "libtinyxml2",
        "libssl",
        "libcrypto",
        "libhidlbase",
        "libhidltransport",
        "libutils",
        "libz",
        "libhwbinder",
        "android.hardware.gnss@1.0",
        "vendor.volvocars.hardware.cloud@1.0",
    ],

    static_libs: [
        "libcurl",
        "libboost_1_64_0_vcc",
    ],

    local_include_dirs: ["src"],

    compile_multilib: "64",
}
