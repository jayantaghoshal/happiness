<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
        package="com.volvocars.localconfig"
        coreApp="true"
        android:sharedUserId="android.uid.system">

    <original-package android:name="com.volvocars.localconfig" />

    <permission
        android:name="android.volvocars.permission.LOCAL_CONFIG"
        android:protectionLevel="system|signature"
        android:label="@string/volvocars_permission_label_lcfg"
        android:description="@string/volvocars_permission_desc_lcfg" />


    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.DEVICE_POWER" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.REBOOT" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />

    <application android:label="Local Config service"
            android:directBootAware="true"
            android:allowBackup="false"
            android:persistent="true">

        <service android:name=".LcfService"
                android:singleUser="true">
            <intent-filter>
                <action android:name="android.volvocars.localconfig.ILocalConfig" />
            </intent-filter>
        </service>
    </application>
</manifest>
