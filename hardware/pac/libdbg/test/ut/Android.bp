cc_test {
    name: "libdbgTest",

    defaults: [
        "volvocars_cc_defaults_hq_tests",
    ],

    srcs: [
        "*.cpp",
    ],

    local_include_dirs: [
        "include",
    ],

    header_libs: [
        "libdbg_headers",
    ],

    cppflags: [
        "-DLOG_TAG=\"libdbg\"",
        "-DLIBDBG_ENABLE_DEBUG",
    ],

    shared_libs: [
        "liblog",
        "libcutils",
    ],

    whole_static_libs: [
        "libdbg_static",
    ],

    static_libs: [
        "libgtest",
    ],

    test_suites: [
        "vts",
    ],

}
