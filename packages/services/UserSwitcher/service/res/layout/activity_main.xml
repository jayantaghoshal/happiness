<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/editTextUserId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/pairUserButtonCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CreateUser"
            android:gravity="top|right"/>
        <Button
            android:id="@+id/pairUserButtonSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch user"
            android:gravity="top|right"/>
        <Button
            android:id="@+id/pairUserButtonPair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pair"
            android:gravity="top|right"/>
        <Button
            android:id="@+id/dumpUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dump Android Users"
            android:gravity="top|right"/>

        <Button
            android:id="@+id/deleteUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete User button"
            android:gravity="top|right"/>

    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.6"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textSize="16sp"
            tools:text="Log" />

    </ScrollView>
</LinearLayout>
