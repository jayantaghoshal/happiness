<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.volvocars.softwareupdateapp.SoftwareUpdateActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingsRootLayout">

<android.support.v7.widget.Toolbar
   android:id="@+id/toolbar"
   android:layout_width="match_parent"
   android:layout_height="?attr/actionBarSize"
   android:background="?attr/colorPrimary"
   android:elevation="4dp"
   app:title="Settings"
   app:titleTextColor="@android:color/white"
   app:titleTextAppearance="@style/Toolbar.TitleText"
   android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
   app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
</android.support.v7.widget.Toolbar>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/settingsLayout"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_gravity="top|center"
            android:orientation="vertical">

            <Switch
                android:id="@+id/enableOta"
                android:thumbTint="@color/fabDark"
                android:text="Enable OTA"
                android:checked="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:switchMinWidth="70dp"
                android:switchPadding="343dp"
                android:layout_marginTop="@dimen/defaultPadding"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <TextView
                android:text="This setting determines whether or not the vehicle shall act on commissioned assignments and updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

            <View
                android:layout_height="2dp"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/defaultPadding"
                android:background="#8c8c8c"/>

            <Switch
                android:id="@+id/autoDownload"
                android:thumbTint="@color/fabDark"
                android:text="Automatic downloads"
                android:textStyle="bold"
                android:textSize="20dp"
                android:switchMinWidth="70dp"
                android:switchPadding="250dp"
                android:layout_marginTop="@dimen/defaultPadding"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <TextView
                android:text="This setting is used in the vehicle to determine if the vehicle shall download software automatically. (auto-commission and download)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

            <View
                android:layout_height="2dp"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/defaultPadding"
                android:background="#8c8c8c"/>

            <Switch
                android:id="@+id/autoInstall"
                android:thumbTint="@color/fabDark"
                android:text="Automatic installation"
                android:textStyle="bold"
                android:textSize="20dp"
                android:switchMinWidth="70dp"
                android:switchPadding="247dp"
                android:layout_marginTop="@dimen/defaultPadding"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

            <TextView
                android:text="This setting is used to control different behaviors when an installation is about to be initiated in the vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>

            <View
                android:layout_height="2dp"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/defaultPadding"
                android:background="#8c8c8c"/>
    </LinearLayout>
</FrameLayout>
