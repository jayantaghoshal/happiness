<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.volvocars.softwareupdatesample">
    <application
        android:icon="@drawable/ic_cloud_white_48dp"
        android:label="Software Update">
        <activity
                android:name=".SoftwareUpdateActivity"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:theme="@style/AppTheme"
                android:parentActivityName=".SoftwareUpdateActivity">
        </activity>
        <uses-library android:name="android.test.runner" />
    </application>
    <instrumentation android:name="android.support.test.runner.AndroidJUnitRunner"
                     android:targetPackage="com.volvocars.softwareupdatesample"
                     android:label="Tradefed SoftwareUpdateTest">
    </instrumentation>
</manifest>