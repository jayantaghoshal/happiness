<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.volvocars.remotectrlservices.audioctrl"
          android:sharedUserId="android.uid.system"
          android:exported="true"
          coreApp="true">
  <original-package android:name="com.volvocars.remotectrlservices.audioctrl" />
  <permission
    android:name="android.volvocars.permission.REMOTE_CTRL"
    android:protectionLevel="system|signature"
    android:label="@string/volvocars_permission_label_remote_ctrl"
    android:description="@string/volvocars_permission_desc_remote_ctrl" />
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
  <uses-permission android:name="android.volvocars.permission.REMOTE_CTRL"/>
  <application
    android:label="RemoteCtrl.AudioCtrl"
    android:directBootAware="true">
    <receiver
      android:name=".StartOnBoot"
      android:enabled="true">
      <intent-filter android:priority="1000">
        <action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
    </receiver>
    <service android:persistent="true"
             android:name=".AudioCtrlService"
             android:exported="true">
      <intent-filter>
        <action android:name="com.volvocars.remotectrlservices.audioctrl.AudioCtrlService.ACTION_VOLUME_CTRL" />
      </intent-filter>
    </service>
  </application>
</manifest>





